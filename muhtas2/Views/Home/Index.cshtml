@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/myLayout.cshtml";
}
<div class="d-flex justify-content-center">

    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6">
                <h1 class="w-100">Red</h1>
            </div>
            <div class="col-md-6">
                <h1 id="red"></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h1>Green</h1>
            </div>
            <div class="col-md-6">
                <h1 id="green"></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h1>Blue</h1>
            </div>
            <div class="col-md-6">
                <h1 id="blue"></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h1>Distance</h1>
            </div>
            <div class="col-md-6">
                <h1 id="distance"></h1>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function updateSensorData() {
        $.ajax({
            url: '/Monitor/sensor',
            type: 'POST',
            dataType: 'json',
            success: function (data) {
                $('#red').text(data["red"]);
                $('#blue').text(data["blue"]);
                $('#green').text(data["green"]);
                $('#distance').text(data["distance"]);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    }

    $(document).ready(function () {

        updateSensorData();

        setInterval(function () {
            updateSensorData();
        }, 500);
    });
</script>
