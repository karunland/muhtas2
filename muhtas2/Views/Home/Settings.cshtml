@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/myLayout.cshtml";
}
@using Entity.DbModel
@model MonitorShow

<div class="container" style="height: 80vh;">
    <div class="card card-body">
        <div class="row d-flex justify-content-center">
            <div class="h1 ">Settings</div>
        </div>
        <div class="row d-flex justify-content-center">

            <div class=" col-md-6">
                <form class="form" method="post" asp-action="Settings" asp-asp-controller="Home">

                    <input hidden name="Id" value="@Model.Id" />

                    <div class="row h2">Rgb Section</div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="true" asp-for="@Model.RgbSection" />
                        <label class="form-check-label" for="RgbSection">Show</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="false" asp-for="@Model.RgbSection" />
                        <label class="form-check-label" for="RgbSection">Close</label>
                    </div>

                    <div class="mt-5 row h2">Distance Section</div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="true" asp-for="@Model.DistanceSection" />
                        <label class="form-check-label" for="DistanceSection">Show</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="false" asp-for="@Model.DistanceSection" />
                        <label class="form-check-label" for="DistanceSection">Close</label>
                    </div>

                    <div class="mt-5 row h2">Details Section</div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="true" asp-for="@Model.DetailsSection" />
                        <label class="form-check-label" for="DetailsSection">Show</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="false" asp-for="@Model.DetailsSection" />
                        <label class="form-check-label" for="DetailsSection">Close</label>
                    </div>

                    <div class="d-flex justify-content-end mt-5">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
